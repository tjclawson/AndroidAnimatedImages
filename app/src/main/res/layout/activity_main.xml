<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/image_vector"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:padding="16dp"
            android:text="Hello World!"
            android:layout_gravity="center_vertical"/>

    <Button
            android:id="@+id/button_image_vector"
            android:text="Play Vector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/button_image_gif"
            android:text="Show Gif"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    <Button
            android:id="@+id/button_image_animated"
            android:layout_width="match_parent"
            android:text="Show Animated Image"
            android:layout_height="wrap_content" />

</LinearLayout>